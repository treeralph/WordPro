<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@color/blue">

    <ImageView
        android:id="@+id/signUpActivityImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/signUpActivityCardView"
            android:layout_width="300dp"
            android:layout_height="380dp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:contentPadding="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/character_color">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@drawable/under_line"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/email_icon"/>
                    <EditText
                        android:id="@+id/signUpActivityIdEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:hint="Enter your email"
                        android:textColorHint="@color/blue"
                        android:textColor="@color/blue"
                        android:textSize="15dp"
                        android:fontFamily="@font/poppins_light"
                        android:backgroundTint="@color/transparent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@drawable/under_line"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/password_icon"/>
                    <EditText
                        android:id="@+id/signUpActivityPwEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:hint="Enter your password"
                        android:textColorHint="@color/blue"
                        android:textColor="@color/blue"
                        android:textSize="15dp"
                        android:password="true"
                        android:fontFamily="@font/poppins_light"
                        android:backgroundTint="@color/transparent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@drawable/under_line"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/password_icon"/>
                    <EditText
                        android:id="@+id/signUpActivityPwCheckEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:hint="Password Check"
                        android:textColorHint="@color/blue"
                        android:textColor="@color/blue"
                        android:textSize="15dp"
                        android:password="true"
                        android:fontFamily="@font/poppins_light"
                        android:backgroundTint="@color/transparent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@drawable/under_line"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/person"/>
                    <EditText
                        android:id="@+id/signUpActivityNicknameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:hint="Nickname"
                        android:textColorHint="@color/blue"
                        android:textColor="@color/blue"
                        android:textSize="15dp"
                        android:fontFamily="@font/poppins_light"
                        android:backgroundTint="@color/transparent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1.5">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/signUpActivityGetVerificationButton"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/blue">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Get Verification Code"
                            android:textSize="15dp"
                            android:textColor="@color/character_color"
                            android:fontFamily="@font/poppins_medium"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:background="@drawable/under_line"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/verification"/>

                    <EditText
                        android:id="@+id/signUpActivityVerificationEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:hint="Enter your verification"
                        android:textColorHint="@color/blue"
                        android:textColor="@color/blue"
                        android:textSize="15dp"
                        android:fontFamily="@font/poppins_light"
                        android:backgroundTint="@color/transparent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1.5">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/signUpActivityVerifyButton"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/blue">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Verify Code"
                            android:textSize="15dp"
                            android:textColor="@color/character_color"
                            android:fontFamily="@font/poppins_medium"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/signUpActivityConsoleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:text="Input Correctly"
            android:textSize="17dp"
            android:textColor="@color/red"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>


</FrameLayout>