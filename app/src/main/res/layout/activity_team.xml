<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeamActivity"
    android:orientation="vertical"
    android:background="@color/blue">

    <LinearLayout
        android:id="@+id/teamActivityLinearLayout"
        android:transitionName="linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:background="@drawable/round_border_rect"
        android:orientation="vertical">

        <TextView
            android:id="@+id/teamActivityTeamNameTextView"
            android:transitionName="teamNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If I die young - The Band Perry"
            android:textColor="@color/yellow"
            android:textSize="17dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="left"/>
        <TextView
            android:id="@+id/teamActivityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:textColor="@color/yellow"
            android:textSize="17dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="center"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/teamActivityRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teamActivityNumSentTextView"
                android:transitionName="numSentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#23 sentences"
                android:textColor="@color/character_color"
                android:textSize="17dp"
                android:fontFamily="@font/poppins_light"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/teamActivityFromNameTextView"
                android:transitionName="fromNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="from. jun"
                android:textColor="@color/character_color"
                android:textSize="17dp"
                android:fontFamily="@font/poppins_light"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>