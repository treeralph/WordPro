<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/itemTeamListTeamLinearLayout"
        android:transitionName="linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/round_border_rect">

        <TextView
            android:id="@+id/itemTeamListTeamNameTextView"
            android:transitionName="teamNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If I die young - The Band Perry"
            android:textColor="@color/yellow"
            android:textSize="17dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="left" />
        <View
            android:layout_width="0dp"
            android:layout_height="50dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemTeamListTeamNumSentenceTextView"
                android:transitionName="numSentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#23 sentences"
                android:textColor="@color/character_color"
                android:textSize="17dp"
                android:fontFamily="@font/poppins_light"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/itemTeamListTeamNicknameTextView"
                android:transitionName="fromNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="from. jun"
                android:textColor="@color/character_color"
                android:textSize="17dp"
                android:fontFamily="@font/poppins_light"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>