<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/itemTeamMemberClickedCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:contentPadding="10dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/yellow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/itemTeamMemberClickedNicknameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Jun"
                    android:textSize="17dp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/poppins_light"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress: "
                    android:textSize="11dp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/poppins_light"/>
                <TextView
                    android:id="@+id/itemTeamMemberClickedProgressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="87"
                    android:textSize="11dp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/poppins_light"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textSize="11dp"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/poppins_light"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:text="Progress Graph"
                android:textColor="@color/blue"
                android:fontFamily="@font/poppins_medium"
                android:textSize="20dp"/>
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/itemTeamMemberClickedBarChart"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>

        </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>