<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pageAddSentence2BannerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Make your Cheat Sheet"
            android:textColor="@color/yellow"
            android:textSize="17dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="center" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:contentPadding="10dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/red">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/pageAddSentence2EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:hint=" Input your Cheat Sheet"
                android:gravity="center"
                android:textColorHint="@color/character_color"
                android:textColor="@color/character_color"
                android:textCursorDrawable="@drawable/edit_text_cursor"
                android:textSize="17dp"
                android:fontFamily="@font/poppins_light"
                android:backgroundTint="@color/transparent"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/pageAddSentence2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="60dp"
            android:text="Next Step"
            android:textColor="@color/yellow"
            android:textSize="17dp"
            android:fontFamily="@font/poppins_light"
            android:layout_gravity="right"/>

    </LinearLayout>

</LinearLayout>